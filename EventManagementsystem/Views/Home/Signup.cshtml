@model EventManagementsystem.Models.UserDetails

@{
    ViewData["Title"] = "Signup";
}




<div>
    <div>
        <h1>Signup</h1>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <div>
        <section>
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 cards">
                        <form asp-action="RegisterUser" method="post" asp-controller="home">
                            <div class="form-outline mb-4 hide">
                                <label asp-for="UserId" class="form-label fw-bold"></label>
                                <input asp-for="UserId" id="UserId" class="form-control form-control-lg" placeholder="Enter UserId" />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">

                                    <div class="form-outline">
                                        <label asp-for="FirstName" class="form-label fw-bold"></label>
                                        <input asp-for="FirstName" id="firstname" class="form-control form-control-lg" placeholder="Enter FirstName" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-3">

                                    <div class="form-outline">
                                        <label asp-for="LastName" class="form-label fw-bold"></label>
                                        <input asp-for="LastName" id="lastname" class="form-control form-control-lg" placeholder="Enter FirstName" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" id="email" class="form-control form-control-lg" placeholder="Enter Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Password" class="form-label fw-bold"></label>
                                <input asp-for="Password" id="password" class="form-control form-control-lg" maxlength="10" placeholder="Enter Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Mobile" class="form-label fw-bold"></label>
                                <input asp-for="Mobile" id="mobile" class="form-control form-control-lg" placeholder="Enter Mobile No." />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="Gender" id="femaleGender"
                                       value="Female" checked />
                                <label class="form-check-label" for="femaleGender">Female</label>
                                <input class="form-check-input" type="radio" name="Gender" id="maleGender"
                                       value="Male" />
                                <label class="form-check-label" for="maleGender">Male</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="text-center text-lg-start mt-4 pt-2  d-flex flex-column align-items-center">
                                <input type="button" value="Create" onclick="emailValidate()" class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;" />
                                <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Already have an account? <a asp-action="Login"
                                                              class="link-danger">Login</a>
                                </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>





